<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- "Đề xuất" và icon tìm kiếm -->
    <ImageView
        android:id="@+id/iconSearch"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_search" />

    <TextView
        android:id="@+id/titlePropose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iconSearch"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="@font/oswald"
        android:text="@string/ComicPropose_prompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- List truyện đề xuất -->
    <HorizontalScrollView
        android:id="@+id/ComicProposeScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlePropose"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ProposeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Chữ "Truyện mới" -->
    <TextView
        android:id="@+id/TitleNewComic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ComicProposeScroll"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="@font/oswald"
        android:text="@string/ComicNew_prompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- List truyện mới -->
    <HorizontalScrollView
        android:id="@+id/ComicNewScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleNewComic"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ComicNewList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <!-- Chữ "Truyện đã hoàn thành" -->
    <TextView
        android:id="@+id/TitleFinishedComic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ComicNewScroll"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:fontFamily="@font/oswald"
        android:text="@string/ComicFinished_prompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- List truyện đã hoàn thành -->
    <HorizontalScrollView
        android:id="@+id/ComicFinishedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleFinishedComic"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ComicFinishedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <!-- Khung nội dung chính -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/taskbar" />

    <!-- Taskbar ở dưới cùng -->
    <LinearLayout
        android:id="@+id/taskbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Nút Home -->
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/circle_bg"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/icon_home"
            app:tint="#FFFFFF"
            android:contentDescription="Trang chủ"
            tools:ignore="HardcodedText" />

        <!-- Nút Cài đặt -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/circle_bg"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/icon_settings"
            app:tint="#FFFFFF"
            android:contentDescription="Cài đặt"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>
