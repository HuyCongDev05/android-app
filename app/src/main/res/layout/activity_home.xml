<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- "Đề xuất" và icon tìm kiếm -->
    <ImageView
        android:id="@+id/iconSearch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_search" />

    <TextView
        android:id="@+id/titlePropose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iconSearch"
        android:ellipsize="end"
        android:fontFamily="@font/oswald"
        android:singleLine="true"
        android:text="@string/ComicPropose_prompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- List truyện đề xuất -->
    <HorizontalScrollView
        android:id="@+id/ComicProposeScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlePropose"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ProposeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Chữ "Truyện mới" -->
    <TextView
        android:id="@+id/TitleNewComic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ComicProposeScroll"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/oswald"
        android:singleLine="true"
        android:text="@string/ComicNew_prompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- List truyện mới -->
    <HorizontalScrollView
        android:id="@+id/ComicNewScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleNewComic"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ComicNewList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Chữ "Truyện đã hoàn thành" -->
    <TextView
        android:id="@+id/TitleFinishedComic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ComicNewScroll"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/oswald"
        android:singleLine="true"
        android:text="@string/ComicFinished_prompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- List truyện đã hoàn thành -->
    <HorizontalScrollView
        android:id="@+id/ComicFinishedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleFinishedComic"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ComicFinishedList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>
</RelativeLayout>
